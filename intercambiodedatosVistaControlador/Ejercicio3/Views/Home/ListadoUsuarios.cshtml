@{
    ViewData["Title"] = "Listado de Usuarios";
}

<h2>Listado de Usuarios</h2>

@if (TempData["MensajeExito"] != null)
{
    <div class="alert alert-success">
        @TempData["MensajeExito"]
    </div>
}

<p>Aquí iría la tabla de usuarios...</p>

<hr />

<h3>Crear nuevo usuario (Prueba)</h3>
<form asp-action="CrearUsuario" method="post">
    <div class="form-group">
        <label>Nombre:</label>
        <input name="Nombre" class="form-control" style="width: 300px;" />
    </div>
    <br />
    <button type="submit" class="btn btn-success">Crear y Redirigir</button>
</form>